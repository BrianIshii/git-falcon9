{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-native/all"
    ],
    "parserOptions": {
       "ecmaFeatures": {
          "jsx": true
       }
    },
    "parser": "babel-eslint",
    "plugins": [
        "standard",
        "promise",
        "react",
        "react-native"
    ],
    "env": {
       "react-native/react-native": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
}
